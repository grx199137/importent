doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Document
        link(rel="stylesheet",href="style/bootstrap.min.css")
    body
        button.insertdata.btn.btn-primary
            | 添加
        #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
            .modal-dialog(role='document')
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal', aria-label='Close')
                            span(aria-hidden='true') ×
                        h4.modal-title 添加/修改数据
                    .modal-body
                        form.myform(method="post")
                            .form-group
                                label 姓名
                                input.name.form-control(type='text' name="name")
                            .form-group
                                label 年龄
                                input.form-control(type='text' name="age")
                            .form-group
                                label 性别
                                input.form-control(type='text' name="sex")
                            button.btn.btn-default 添加/修改
        table.table.table-bordered.table-hover
            thead
                th 姓名
                th 年龄
                th 性别
                th 删除
                th 修改
            tbody
                -for(var i=0;i<data.length;i++)
                    tr
                        td=data[i].name
                        td=data[i].age
                        td=data[i].sex
                        td
                            button.deledata(data_name=data[i].name) 删除
                        td
                            button.updatedata(data_name=data[i].name) 修改
        script(src="script/jquery.js")
        script(src="script/bootstrap.js")
        script(src="script/index.js")